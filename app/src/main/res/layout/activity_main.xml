<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F14">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLACK MIRROR :: DEBUG"
        android:textColor="#00FF9C"
        android:textSize="18sp"
        android:typeface="monospace"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <!-- Mode -->
    <TextView
        android:id="@+id/mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MODE: USER"
        android:textColor="#FF5555"
        android:textSize="16sp"
        android:typeface="monospace"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/title"
        android:layout_marginTop="12dp"/>

    <!-- Token -->
    <TextView
        android:id="@+id/token"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TOKEN: none"
        android:textColor="#AAAAAA"
        android:typeface="monospace"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/mode"
        app:layout_constraintStart_toStartOf="@id/mode"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"/>

    <!-- Decrypted -->
    <TextView
        android:id="@+id/decrypted"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DECRYPTED: empty"
        android:textColor="#00FF9C"
        android:typeface="monospace"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/token"
        app:layout_constraintStart_toStartOf="@id/token"
        app:layout_constraintEnd_toEndOf="@id/token"
        android:layout_marginTop="12dp"/>

    <!-- Log panel -->
    <TextView
        android:id="@+id/log"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#111820"
        android:textColor="#CCCCCC"
        android:typeface="monospace"
        android:textSize="12sp"
        android:padding="12dp"
        android:text="> waiting for input..."
        app:layout_constraintTop_toBottomOf="@id/decrypted"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/decrypted"
        app:layout_constraintEnd_toEndOf="@id/decrypted"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>